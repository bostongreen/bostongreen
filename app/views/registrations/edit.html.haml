%h2
  Edit #{resource_name.to_s.humanize}
= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
  = devise_error_messages!
  %p
    = f.label :first_name
    = f.text_field :first_name, :class => 'title'
  %p
    = f.label :last_name
    = f.text_field :last_name, :class => 'title'
  %p
    = f.label :email
    = f.text_field :email, :class => 'title'
  %p
    = f.label :nickname
    = f.text_field :nickname, :class => 'title'
  %p
    = f.label :password
    = f.password_field :password, :class=> 'title', :placeholder => '********************'
    %br/
    %hint
      %em (leave blank if you don't want to change it)
  %p
    = f.label :password_confirmation, 'Confirm password'
    = f.password_field :password_confirmation, :class=> 'title', :placeholder => '********************'
  %p
    = f.submit "Update My Profile", :class => 'cupid-green'
    or
    = link_to "Cancel", "/"
%h3 Cancel my account
%p
  Unhappy? #{link_to "Cancel my account", registration_path(resource_name), :confirm => "Are you sure?", :method => :delete}.
= link_to "Back", :back
