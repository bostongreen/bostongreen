%h2 Sign in
= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
  %p
    = f.text_field :login, :placeholder => 'Email or Nickname', :class => 'title'
  %p
    = f.password_field :password, :placeholder => 'Password', :class => 'title'
  - if devise_mapping.rememberable?
    %p
      = f.check_box :remember_me
      = f.label :remember_me, "Remember me on this computer"
  %p= f.submit "Sign In", :class=>"cupid-green"
= render :partial => "devise/shared/links"
